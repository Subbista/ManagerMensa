<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Sfondo -->
    <ImageView
        android:id="@+id/blurred_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/food_back"
        android:alpha="0.7" /> <!-- Regola l'opacità per l'effetto sfocato -->

    <!-- Overlay bianco trasparente per migliorare la leggibilità -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80FFFFFF" /> <!-- Bianco con trasparenza -->

    <!-- Contenitore centrale per il form di registrazione -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:padding="16dp"
        android:background="@drawable/edit_text_background"
        android:gravity="center_horizontal">

        <!-- Titolo REGISTRATI -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REGISTRATI"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <!-- Campo Nome -->
        <EditText
            android:id="@+id/nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome"
            android:inputType="textPersonName"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edit_text_background"
            android:padding="10dp" />

        <!-- Campo Cognome -->
        <EditText
            android:id="@+id/cognome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cognome"
            android:inputType="textPersonName"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edit_text_background"
            android:padding="10dp" />

        <!-- Campo Email -->
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edit_text_background"
            android:padding="10dp" />

        <!-- Campo Partita Iva -->
        <EditText
            android:id="@+id/partita_iva"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Partita Iva"
            android:inputType="text"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edit_text_background"
            android:padding="10dp" />

        <!-- Campo Nome Mensa -->
        <EditText
            android:id="@+id/nome_mensa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome Mensa"
            android:inputType="text"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edit_text_background"
            android:padding="10dp" />

        <!-- Bottone Completa Registrazione -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/completa_registrazione_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="COMPLETA REGISTRAZIONE"
                android:gravity="center"
                android:background="@drawable/red_button_background"
                android:textColor="#FFFFFF"
                android:padding="10dp"
                android:layout_marginBottom="16dp" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
